<UserControl x:Class="SiteSyncer.Views.SelectFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SiteSyncer.Views"
             mc:Ignorable="d" d:DesignWidth="300">
    <DockPanel>
        <Button Content="..." Width="20" DockPanel.Dock="Right" Click="Button_Click" />
        <TextBox Name="PathBox" Text="{Binding Path, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:SelectFileControl}}}" Margin="0" />
    </DockPanel>
</UserControl>
